{% extends 'base.html.twig' %}

{% block title %}The Elven Zoo{% endblock %}

{% block body %}
    <h2>Zoo employees</h2>

    <table class="table container">
        <thead>
            <th scope="col">
                name
            </th>
            <th scope="col">
                function
            </th>
        </thead>
        {% for employee in employees %}
            <tbody>
                <td> {{ employee.name }}</td>
                <td> {{ employee.function }}</td>
                <td><a href="{{ path('delete', {'id':employee.id}) }}">Remove</a><br/></td>
            </tbody>

        {% endfor %}

    </table>
{% endblock %}
