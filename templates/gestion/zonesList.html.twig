{% extends 'base.html.twig' %}
{% block title %}Welcome in the zones list{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <h4>Welcome in the zones list</h4>

        <ul>
            {% for zone in zones %}
                <li>{{ zone.name }} <a href="{{ path('deleteZone',{"id":zone.id}) }}">Delete</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}